<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/contacts_apply_item_icon"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:src="@drawable/img_xiaoxiong" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contacts_apply_item_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="apply_name"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/contacts_apply_item_msg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="请求加为好友"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/contacts_apply_item_from"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="来源：账号查找"
            android:textSize="10dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/contacts_apply_item_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="15dp"
        android:background="#11c8fa"
        android:focusable="false"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="同意"
        android:textColor="#ffffff"
        android:textSize="18dp" />

</LinearLayout>
