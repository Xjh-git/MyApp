<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.auction">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.information.SettingActivity" />
        <activity android:name=".activity.information.EditInforActivity" />
        <activity android:name=".activity.auction.DetailsActivity" />
        <activity android:name=".activity.auction.AuctioningActivity" />
        <activity android:name=".activity.information.userInformation.UserPayActivity" />
        <activity android:name=".activity.information.userInformation.UserOrderActivity" />
        <activity android:name=".activity.information.loginAndRegister.LoginActivity" />
        <activity android:name=".activity.information.loginAndRegister.RegisterActivity" />
        <activity android:name=".activity.information.userInformation.UserRechargeActivity" />
        <activity android:name=".activity.information.loginAndRegister.ShowMsgActivity" />
        <activity android:name=".chat.ChatActivity" />
        <activity android:name=".activity.information.MsgDetailsActivity" />
        <activity android:name=".activity.information.userInformation.WithdrawalActivity"></activity>
    </application>

</manifest>